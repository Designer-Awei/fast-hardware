{
  "name": "fast-hardware",
  "version": "0.1.7",
  "description": "一个基于纯Electron的智能硬件开发辅助桌面应用程序",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "node cross-platform-runner.js dev",
    "dev-simple": "node cross-platform-runner.js dev-simple",
    "dev-debug": "node cross-platform-runner.js dev-debug",
    "dev-no-reload": "node cross-platform-runner.js dev-no-reload",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "check-platform": "node platform-check.js",
    "error-help": "node error-handler.js"
  },
  "keywords": [
    "electron",
    "hardware",
    "circuit",
    "design"
  ],
  "author": "Fast Hardware Team",
  "license": "MIT",
  "homepage": "https://github.com/Designer-Awei/fast-hardware",
  "repository": {
    "type": "git",
    "url": "https://github.com/Designer-Awei/fast-hardware.git"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-icon-maker": "^0.0.5",
    "sharp": "^0.34.4",
    "to-ico": "^1.1.5"
  },
  "build": {
    "appId": "com.fasthardware.app",
    "productName": "Fast Hardware",
    "copyright": "Copyright © 2025 Fast Hardware Team",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!data",
      "!node_modules",
      "!dist",
      "!*.md",
      "!package-lock.json",
      "!cross-platform-runner.js",
      "!dev-runner*.js",
      "!test-*.js",
      "!edit_prd.md",
      "!Fast Hardware.txt",
      "!nul",
      "!env.local"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Fast Hardware",
      "deleteAppDataOnUninstall": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "fast-hardware"
    }
  },
  "dependencies": {
    "pathfinding": "^0.4.18"
  }
}
