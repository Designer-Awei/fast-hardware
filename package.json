{
  "name": "fast-hardware",
  "version": "1.0.0",
  "description": "一个基于纯Electron的智能硬件开发辅助桌面应用程序",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "chcp 65001 >nul && node dev-runner.js",
    "dev-simple": "chcp 65001 >nul && electron .",
    "dev-debug": "chcp 65001 >nul && electron . --enable-logging",
    "dev-no-reload": "chcp 65001 >nul && node dev-runner-no-reload.js",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "hardware",
    "circuit",
    "design"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.fasthardware.app",
    "productName": "Fast Hardware",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}